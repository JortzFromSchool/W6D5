<% if action == :edit %>
  <% action_url = cat_rental_request_url(cat_rental)%>
<% else %>
  <% action_url = cat_rental_requests_url %>
<% end %>

<form action="<%= action_url %>" method="post">
    <% if action == :edit && cat_rental.persisted? %>
        <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <label for="cat_id">Cat ID:
        <input type="text" id="cat_id" name="cat_rental[cat_id]" value="<%= cat_rental.cat_id %>">
    </label>
    <br>

    <label for="start_date">Start Date:
        <input type="date" id="start_date" name="cat_rental[start_date]"value="<%= cat_rental.start_date %>">
    </label>

    <br>

    <label for="end_date">End Date:
        <input type="date" id="end_date" name="cat_rental[end_date]"value="<%= cat_rental.end_date %>">
    </label>

    <br>

    
    <input type="submit" value=<%= action == :edit ? 'Edit a cat_rental' : 'Add a cat_rental' %>>